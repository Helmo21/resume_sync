# Backend Environment Variables
# Copy this file to .env and fill in your credentials

# Database (auto-configured by Docker Compose)
DATABASE_URL="postgresql://resumesync:resumesync@db:5432/resumesync"
DATABASE_URL_ASYNC="postgresql+asyncpg://resumesync:resumesync@db:5432/resumesync"

# JWT Secret - GENERATE A NEW ONE FOR PRODUCTION!
# Generate with: openssl rand -hex 32
SECRET_KEY="dev-secret-key-change-in-production-123456789"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES="10080"

# LinkedIn OAuth (Optional - for LinkedIn profile import)
# Get credentials from: https://www.linkedin.com/developers/apps
LINKEDIN_CLIENT_ID="your_linkedin_client_id"
LINKEDIN_CLIENT_SECRET="your_linkedin_client_secret"
LINKEDIN_REDIRECT_URI="http://localhost:8000/api/auth/linkedin/callback"

# Apify (Optional - for enhanced job scraping)
# Get API token from: https://console.apify.com/account/integrations
APIFY_API_TOKEN="your_apify_token_here"

# OpenRouter API - REQUIRED FOR AI MATCHING
# Get your API key from: https://openrouter.ai/keys
OPENROUTER_API_KEY="sk-or-v1-your-api-key-here"
OPENROUTER_MODEL="anthropic/claude-3.5-sonnet"

# AWS S3 (Optional - PDFs stored locally by default)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
AWS_REGION="us-east-1"
AWS_S3_BUCKET="resumesync-pdfs"

# Frontend URL (for CORS)
FRONTEND_URL="http://localhost:5173"

# Redis (auto-configured by Docker Compose)
REDIS_URL="redis://redis:6379/0"

# Environment
ENVIRONMENT="development"

# ===================================================
# LinkedIn Service Accounts - IMPORTANT!
# ===================================================
# These are LinkedIn accounts used ONLY for job scraping
# DO NOT use your personal LinkedIn account here!
#
# How to set up:
# 1. Create 2-3 new LinkedIn accounts (use temporary email services)
# 2. Complete basic profile setup (name, location, etc.)
# 3. Add credentials below in format: email:password|email2:password2
# 4. Optional: Mark premium accounts for priority
#
# Format: email1:password1|email2:password2|email3:password3
# ===================================================

# REQUIRED: Add your LinkedIn scraping accounts here
LINKEDIN_SERVICE_ACCOUNTS="scraper1@example.com:Password123!|scraper2@example.com:Password456!"

# Optional: Premium LinkedIn accounts (comma-separated emails)
# These will be used first for better rate limits
LINKEDIN_PREMIUM_ACCOUNTS=""
